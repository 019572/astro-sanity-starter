---
const { id, heading, subheading, supporting, facets = [], cta, image, 'data-sb-field-path': fieldPath } = Astro.props;
---

<div id={id} class="card w-96 bg-base-100 shadow-md" data-sb-field-path={fieldPath}>
    {
        image && image.src && (
            <img
                src={image.src}
                alt={image.alt}
                width={image.width}
                height={image.height}
                class="card-image"
                data-sb-field-path=".image .image.src#@src .image.alt#@alt"
            />
        )
    }
    <div class="card-body">
        {
            heading && (
                <h3 class="card-title" data-sb-field-path=".heading">
                    {heading}
                </h3>
            )
        }
        {subheading && <p data-sb-field-path=".subheading">{subheading}</p>}
        {supporting && <p data-sb-field-path=".supporting">{supporting}</p>}
        {
            cta && cta.url && cta.label && (
                <a
                    id={cta.id}
                    href={cta.url}
                    aria-label={cta.ariaLabel}
                    class="btn btn-primary"
                    data-sb-field-path=".cta .cta.url#@href .cta.ariaLabel#@aria-label .cta.id#@id"
                >
                    <span data-sb-field-path=".label">{cta.label}</span>
                </a>
            )
        }
    </div>
</div>
