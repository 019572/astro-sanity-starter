---
import Button from './Button.astro';

const { heading, supporting, cta } = Astro.props;
---

<article class="text-center my-6" data-sb-field-path="summary">
    {
        heading && (
            <h2 class="text-4xl font-bold text-center mb-6" data-sb-field-path=".heading">
                {heading}
            </h2>
        )
    }
    {
        supporting && (
            <p class="supporting | text-05" data-sb-field-path=".supporting">
                {supporting}
            </p>
        )
    }
    {cta && <Button {...cta} data-sb-field-path=".cta" />}
</article>
