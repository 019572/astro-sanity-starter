---
import Button from './Button.astro';

const { heading, ctas = [] } = Astro.props;
---

<section class="text-center" data-sb-field-path="cta">
    {
        heading && (
            <h2 class="text-3xl font-bold text-center mb-6" data-sb-field-path=".heading">
                {heading}
            </h2>
        )
    }
    {
        ctas.length > 0 && (
            <div data-sb-field-path=".ctas">
                {ctas.map((cta, idx) => (
                    <Button {...cta} data-sb-field-path={`.${idx}`} />
                ))}
            </div>
        )
    }
</section>
