---
import ChartLine from '../icons/ChartLine.astro';
import CodeBranch from '../icons/CodeBranch.astro';
import Discourse from '../icons/Discourse.astro';
import DoorOpen from '../icons/DoorOpen.astro';
import GaugeMax from '../icons/GaugeMax.astro';
import GitHub from '../icons/GitHub.astro';
import LightbulbOn from '../icons/LightbulbOn.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import PenPaintbrush from '../icons/PenPaintbrush.astro';
import RocketLaunch from '../icons/RocketLaunch.astro';
import Shapes from '../icons/Shapes.astro';
import Sparkles from '../icons/Sparkles.astro';
import Twitter from '../icons/Twitter.astro';
import YouTube from '../icons/YouTube.astro';

const iconMap: { [key: string]: any } = {
    'chart-line': ChartLine,
    'code-branch': CodeBranch,
    discourse: Discourse,
    'door-open': DoorOpen,
    'gauge-max': GaugeMax,
    github: GitHub,
    'lightbulb-on': LightbulbOn,
    linkedin: LinkedIn,
    'pen-paintbrush': PenPaintbrush,
    'rocket-launch': RocketLaunch,
    shapes: Shapes,
    sparkles: Sparkles,
    twitter: Twitter,
    youtube: YouTube
};

const { icon, class: className, ...rest } = Astro.props;

const IconComponent = icon ? iconMap[icon] : null;
---

{IconComponent && <IconComponent class={className} {...rest} />}
